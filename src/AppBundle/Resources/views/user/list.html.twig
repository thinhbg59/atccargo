{% extends '@App/base.html.twig' %}

{% set active_item = 'drivers_list' %}

{% block content %}
    <table class="ui celled left aligned table">
        <thead class="center aligned">
        <tr>
            <th>{% trans %}Driver{% endtrans %}</th>
            <th>{% trans %}Burned fuel{% endtrans %}</th>
            <th>{% trans %}Travelled distance{% endtrans %}</th>
            <th>{% trans %}Made transports{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <h4 class="ui image header">
                        <img src="{{ asset('assets/images/avatars/') }}{{ user.avatar }}.jpg" class="ui mini rounded image">
                        <div class="content">
                            {{ user.username|capitalize }}
                            <div class="sub header">{{ user.roles|join("")|trans }}
                            </div>
                    </h4>
                </td>
                <td><i class="lightning icon"></i> {{ user.burnedFuel|number_format(0, '', ' ') }} L</td>
                <td><i class="road icon"></i> {{ user.travelledDistance|number_format(0, '', ' ') }} KM</td>
                <td><i class="cubes icon"></i> {{ user.madedTransports }}</td>
                <td class="center aligned"><a class="ui green horizontal large label" href="{{ path('app_transport_user', {'id': user.id}) }}"><i class="check circle icon"></i>{% trans %}Show transports{% endtrans %}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}